<!DOCTYPE html>
<html>
  <head>
    <title>Facebook Friend Recommendations</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700,300" rel="stylesheet" />
    <link rel="stylesheet" href="/static/css/bootstrap.css" />
    <link rel="stylesheet" href="/static/css/select2.css" />
    <link rel="stylesheet" href="/static/css/style.css" />
  </head>
  <body>
    <div id="fb-root"></div>
    <script src="/static/js/fbinit.js"></script>

    <div class="container">
      <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <a class="navbar-brand" href="#" style="padding: 8px 10px 0;"><img src="/static/logo.png" style="width:200px" /></a>
        </div>
        <form class="navbar-form navbar-left" role="search" onsubmit="return false">
          <div class="form-group">
            <input type="text" id="search-box" class="form-control" placeholder="Search">
          </div>
          <button type="submit" id="search-btn" class="btn btn-default">Submit</button>
          <div class="form-group" style="margin-left: 30px;">
            <select id="genre">
              <option value="">- Genre -</option>
              <option>Adventure</option>
              <option>Animation
              <option>Action</option>
              <option>Comedy</option>
              <option>Crime</option>
              <option>Documentary</option>
              <option>Drama</option>
              <option>Family</option>
              <option>Fantasy</option>
              <option>Mystery</option>
              <option>Romance</option>
              <option>Science Fiction</option>
              <option>Thriller</option>
            </select>
          </div>
          <div class="form-group" style="margin-left: 30px;">
            Sort by: &nbsp; 
            <label class="radio-inline">
              <input type="radio" name="sort" value="rating" checked> Rating
            </label>
            <label class="radio-inline">
              <input type="radio" name="sort" value="title"> Title
            </label>
            <label class="radio-inline">
              <input type="radio" name="sort" value="year"> Year
            </label>
          </div>
        </form>
        <div class="nav navbar-right" style="padding: 14px;">
          <fb:login-button scope="user_interests,user_likes,friends_interests,friends_likes" autologoutlink="true" width="200" max-rows="1"></fb:login-button>
        </div>
      </nav>
      <div class="row movies">
        {% for movie in movies[:20] %}
        <a class="col-md-2 well movie" target="_blank" href="{{ movie.url }}" rating="{{ movie.rating }}" year="{{ movie.year }}" genres='{{ movie.genres }}' data-toggle="popover" data-title="Friends who like this movie" data-content="{{ movie.friends }}" data-placement="auto right" data-html="true">
          <div class="clip">
            <h3>{{ movie.name }}</h3>
            <div class="poster" style="background-image: url('{{ movie.poster }}')"></div>
          </div>
        </a>
        {% endfor %}
      </div>
    </div>
    <div class="loading">
      <div>
        <h1>Analyzing movies...</h1>
        <img src="/static/bootanimation.gif" />
      </div>
    </div>

    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/select2.min.js"></script>
    <script src="/static/js/jquery.isotope.min.js"></script>
    <script src="/static/js/app.js"></script>
  </body>
</html>
