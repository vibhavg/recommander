<!DOCTYPE html>
<html>
  <head>
    <title>Facebook Friend Recommendations</title>
    <link rel="stylesheet" href="/static/css/bootstrap.css" />
    <link rel="stylesheet" href="/static/css/style.css" />
  </head>
  <body>
    <div id="fb-root"></div>
    <script src="/static/js/fbinit.js"></script>

    <div class="container">
      <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Recommander</a>
        </div>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <div class="nav navbar-right" style="padding: 14px;">
          <fb:login-button autologoutlink="true" width="200" max-rows="1"></fb:login-button>
        </div>
      </nav>

      <h2>Movies</h2>
      <div class="row">
        {% for movie in movies %}
        <a class="col-md-2 well" href="#">
          <h3>{{ movie.name }}</h3>
          <div class="poster" style="background-image: url('{{ movie.poster }}')"></div>
        </a>
        {% endfor %}
      </div>

      <h2>Books</h2>
      <div class="row">
        {% for book in books %}
          <a class="col-md-2 well" href="#">
            <h3>{{ book.name }}</h3>
            <div class="poster" style="background-image: url('{{ book.poster }}')"></div>
          </a>
        {% endfor %}
      </div>
    </div>

    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
  </body>
</html>
